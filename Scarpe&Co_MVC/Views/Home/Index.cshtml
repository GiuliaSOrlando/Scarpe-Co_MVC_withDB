@model IEnumerable<Scarpe_Co_MVC.Prodotto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>Elenco degli articoli</h2>

<div class="row">
    @foreach (Prodotto p in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                @if (!string.IsNullOrEmpty(@p.CoverImg))
                {
                    <img src="@p.CoverImg" class="card-img-top" alt="@p.Nome">
                }
            <div class="card-body">
                <h5 class="card-title">@p.Nome</h5>
                <p class="card-text">@p.Descrizione</p>
                <p class="card-text"><strong>Prezzo:</strong> @p.Prezzo €</p>
                @Html.ActionLink("Dettagli", "Details", "Home", new { id = p.IdProdotto }, new { @class = "btn btn-primary" })
            </div>
            </div>
        </div>
    }
</div>